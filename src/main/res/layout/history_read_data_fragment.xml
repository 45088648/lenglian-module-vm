<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/layoutbg"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="ID"/>

        <TextView
            android:id="@+id/tvSensorId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="传感器ID" />

        <TextView
            android:id="@+id/tvSerialNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="序列号" />

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="温度" />

        <TextView
            android:id="@+id/tvRh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="湿度" />

        <TextView
            android:id="@+id/tvSsVoltage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="电压" />

        <TextView
            android:id="@+id/tvRssi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="信号" />

        <TextView
            android:id="@+id/tvSonsorDataTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="采集" />

        <TextView
            android:id="@+id/tvSsTransfTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="SS传输" />

        <TextView
            android:id="@+id/tvGwTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="GW传输" />

        <TextView
            android:id="@+id/tvWait1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/logtime"
            android:text="wait1"/>

        <TextView
            android:id="@+id/tvWait2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/logtime"
            android:text="wait2"/>

        <TextView
            android:id="@+id/tvErrorcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/logtime"
            android:text="error"/>

        <TextView
            android:id="@+id/tvSendFlag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="S" />

        <TextView
            android:id="@+id/tvResponseFlag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/log"
            android:text="R" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvData"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="#eaeaea"
        android:divider="@drawable/bg_list_selector"
        android:dividerHeight="1px"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbarStyle="outsideOverlay">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>